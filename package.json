{
  "name": "my-wordpress",
  "version": "1.0.0",
  "description": "WordPress Theme Dev Starter",
  "main": "index.js",
  "author": "sk_rt",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "npm-run-all -p watch:*",
    "dev": "npm-run-all start",
    "dist": "npm-run-all clean-dist dist:wp-theme dist:webpack",
    "watch:webpack": "webpack --watch",
    "dist:webpack": "NODE_ENV=production webpack --mode production",
    "build:webpack": "webpack",
    "dist:wp-theme": "cpx \"public/themes/!(twenty*)/**/*.!(log)\" dist/themes/ -v",
    "init:docker": "docker-compose build && npm run build:webpack",
    "init:wp": "sh scripts/wp-init.sh",
    "start:docker": "docker-compose up -d",
    "stop:docker": "docker-compose stop",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean-dist": "rimraf dist",
    "prepare":"husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/preset-env": "^7.14.5",
    "@typescript-eslint/eslint-plugin": "4.27.0",
    "@typescript-eslint/parser": "^4.27.0",
    "autoprefixer": "^10.2.6",
    "babel-loader": "^8.2.2",
    "browser-sync": "^2.26.14",
    "browser-sync-webpack-plugin": "^2.3.0",
    "cpx": "^1.5.0",
    "css-loader": "^5.2.6",
    "dotenv": "^10.0.0",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "mini-css-extract-plugin": "^1.6.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.5",
    "postcss-loader": "^6.1.0",
    "prettier": "^2.3.1",
    "rimraf": "^3.0.2",
    "sass": "^1.35.1",
    "sass-loader": "^12.1.0",
    "ts-loader": "^9.2.3",
    "typescript": "^4.3.4",
    "webpack": "^5.39.1",
    "webpack-cli": "^4.7.2"
  }
}
