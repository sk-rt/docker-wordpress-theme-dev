{
  "name": "my-wordpress",
  "version": "1.0.0",
  "description": "WordPress Theme Dev Starter",
  "main": "index.js",
  "author": "sk_rt",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "npm-run-all -p watch:*",
    "dev": "npm-run-all start",
    "dist": "npm-run-all clean-dist dist:*",
    "watch:webpack": "webpack --watch",
    "dist:webpack": "NODE_ENV=production webpack -p",
    "build:webpack": "webpack",
    "dist:wp-theme": "cpx \"public/themes/**/*.{php,css,png}\" dist/wp-content/themes/my-theme/ -v",
    "init:docker": "docker-compose build && npm run build:webpack",
    "start:docker": "docker-compose up -d",
    "stop:docker": "docker-compose stop",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean-dist": "rimraf dist"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@typescript-eslint/eslint-plugin": "4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "autoprefixer": "^10.2.4",
    "babel-loader": "^8.2.2",
    "browser-sync": "^2.26.14",
    "browser-sync-webpack-plugin": "^2.3.0",
    "cpx": "^1.5.0",
    "css-loader": "^5.0.1",
    "dotenv": "^8.2.0",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.3",
    "mini-css-extract-plugin": "^1.3.5",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.4",
    "postcss-loader": "^4.2.0",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "sass": "^1.32.5",
    "sass-loader": "^10.1.1",
    "ts-loader": "^8.0.14",
    "typescript": "^4.1.3",
    "webpack": "^5.19.0",
    "webpack-cli": "^4.4.0"
  }
}
